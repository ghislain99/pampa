<h1>Listing users</h1>

  <ul>
    <% @users.each do |user| %>
      <li>
		<%= gravatar_for user, :size => 30 %>
		  <%= link_to user.nom, user %>
		  <% if current_user.admin? %>
		  | <%= link_to 'Edit', edit_user_path(user) %> | <%= link_to "supprimer", user, :method => :delete, :confirm => "Etes-vous certain?",
										:title => "Supprimer #{user.nom}" %>
		  <% end %>
      </li>
    <% end %>
  </ul>

<br>

<%= link_to 'New User', new_user_path %>
